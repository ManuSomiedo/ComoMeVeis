<div class="well col-xs-6 col-xs-offset-3">
      <div class="gravatar">
        <figure>
          <%=gravatar_for @user%>
          <figcaption class="Foto">
            <p>Gravatar</p>
          </figcaption>
        </figure>
      </div>

      <h2><%=@user.name%></h2>
      <p>
        <strong>E-mail:
        </strong>
        <%=@user.email%></p>
      <p>
        <strong>Telephone:
        </strong><%=@user.telephone%></p>
      <p>
        <strong>Join date:
        </strong><%=@user.created_at.to_formatted_s(:long)%>
      </p>
      <h3>Averages:</h2>
      <%count = 0%>
      <%@habilities.each do |hab|%>
      <div class="progress">
        <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="<%=@valorations.where(hability_id: hab.id).average(:points)%>" class="progress-bar" role="progressbar" style="width: <%=@valorations.where(hability_id: hab.id).average(:points)%>%;"></div>
        <span class="progress-type"><%=hab.name%></span>
        <span class="progress-completed"><%=@valorations.where(hability_id: hab.id).average(:points)%></span>
      </div>
      <%count = count + 1%>
      <%end%>
</div>
