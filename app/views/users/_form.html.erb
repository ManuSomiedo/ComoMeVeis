
      <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %>
          prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="field">
        <span class="label label-success">Name</span>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="field">
        <span class="label label-success">E-mail</span>
        <%= f.email_field :email, class:"form-control"%>
      </div>
      <div class="field">
        <span class="label label-success">Password</span>
        <%= f.password_field :password, class:"form-control"%>
      </div>
      <div class="field">
        <span class="label label-success">Password confirmation</span>
        <%= f.password_field :password_confirmation, class:"form-control"%>
      </div>
      <div class="field">
        <span class="label label-success">telephone</span>
        <%= f.telephone_field :telephone,class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Send changes!", class: "btn btn-primary" %>
      </div>
      <% end %>
